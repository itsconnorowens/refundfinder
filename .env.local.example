# Email Configuration
# Primary email provider (sendgrid, resend, smtp, console)
EMAIL_PROVIDER=console

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@refundfinder.com
SENDGRID_FROM_NAME=RefundFinder

# Resend Configuration
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@refundfinder.com
RESEND_FROM_NAME=RefundFinder

# SMTP Configuration (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM_EMAIL=noreply@refundfinder.com
SMTP_FROM_NAME=RefundFinder

# Default From Configuration
FROM_EMAIL=noreply@refundfinder.com
FROM_NAME=RefundFinder

# Email Queue Configuration
EMAIL_QUEUE_MAX_RETRIES=3
EMAIL_QUEUE_RETRY_DELAY=30000
EMAIL_QUEUE_BATCH_SIZE=10
EMAIL_QUEUE_PROCESSING_INTERVAL=10000